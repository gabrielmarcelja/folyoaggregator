# Application Configuration
APP_ENV=development
APP_URL=http://folyoaggregator.test
APP_DEBUG=true
APP_TIMEZONE=UTC

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=folyoaggregator
DB_USER=folyo_user
DB_PASS=your_password_here
DB_CHARSET=utf8mb4

# Redis Cache Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0

# Cache Settings
CACHE_TTL_PRICES=30
CACHE_TTL_ASSETS=300
CACHE_TTL_HISTORICAL=3600

# Exchange API Keys (Add your keys here)
# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Coinbase
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# KuCoin
KUCOIN_API_KEY=
KUCOIN_API_SECRET=
KUCOIN_API_PASSPHRASE=

# Bybit
BYBIT_API_KEY=
BYBIT_API_SECRET=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_DAY=10000

# Worker Settings
WORKER_PRICE_UPDATE_INTERVAL=30
WORKER_HISTORICAL_UPDATE_INTERVAL=300
WORKER_MAX_RETRIES=3

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_FILES=30

# API Settings
API_VERSION=v1
API_RATE_LIMIT_ENABLED=true
API_CORS_ENABLED=true
API_CORS_ORIGINS=*

# Aggregation Settings
AGGREGATION_METHOD=vwap
AGGREGATION_MIN_EXCHANGES=3
AGGREGATION_OUTLIER_THRESHOLD=5

# Historical Data Settings
HISTORICAL_RETENTION_DAYS=365
HISTORICAL_AGGREGATION_ENABLED=true