{
    "name": "folyoaggregator/api",
    "description": "Cryptocurrency Data Aggregator API",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ccxt/ccxt": "^4.0",
        "vlucas/phpdotenv": "^5.5",
        "predis/predis": "^2.2",
        "monolog/monolog": "^3.5",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "FolyoAggregator\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "migrate": "php scripts/setup/migrate.php",
        "sync:cmc": "php scripts/setup/sync-cmc.php",
        "sync:metadata": "php scripts/setup/sync-metadata.php",
        "collect:prices": "php scripts/collection/price-collector.php --once",
        "collect:history": "php scripts/collection/collect-full-history-paginated.php",
        "health:check": "php scripts/maintenance/health-check.php",
        "stats": "php scripts/maintenance/generate-stats.php",
        "lint": "find src -name '*.php' -exec php -l {} \\;"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}